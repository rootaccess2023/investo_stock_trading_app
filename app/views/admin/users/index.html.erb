<div class="flex" data-controller="admin-overview">
    <section>
        <%= render "shared/nav" %>
    </section>
    <main class="h-screen w-full p-8 bg-teal-50 overflow-scroll">
        <%= render "shared/admin_search" %>
        <h1 class="text-3xl font-bold pb-4">Hello Admin</h1>
        <div class="w-full flex flex-col gap-4 md:flex-col lg:flex-row">
            <section class="h-full w-full flex flex-col gap-10">
                <div class="w-full rounded-sm">
                    <section class="w-full flex gap-4 md:gap-4">
                        <%= render "admin/users/admin_overview"%>
                    </section>
                </div>
                <div class="w-full flex justify-center items-center h-80">
                    <%= render "admin/users/chart"%>
                </div>
            </section>
            <section class="h-[40rem]">
                <div class="h-full flex flex-col gap-2">
                    <%= render "admin/users/user_summary"%>
                </div>
            </section>
        </div>
    </main>
</div>
