<div class="flex">
    <section>
        <%= render "shared/nav"%>
    </section>
    <main class="h-screen w-full flex flex-col gap-8 p-8 pb-12 bg-teal-50 overflow-scroll">
        <section class="w-full flex flex-col gap-8 xl:flex-row">
            <div class="w-full min-w-[20rem] xl:w-1/2 flex gap-4 bg-teal-600 p-8 rounded-lg">
                <%= render "trader/portfolio_value"%>
            </div>
            <div class="w-full flex flex-col lg:flex-row xl:w-1/2 gap-4">
                <%= render "trader/overview"%>
            </div>
        </section>
        <section class="flex flex-col gap-8 lg:flex-row ">
            <div class="w-full lg:w-1/2">
                <%= render "trader/stock_bought"%>
            </div>
            <div class="w-full flex justify-center items-center bg-white shadow rounded-lg p-4 lg:w-1/2">
                <%= render "trader/overview_chart"%>
            </div>
        </section>
    </main>
</div>
